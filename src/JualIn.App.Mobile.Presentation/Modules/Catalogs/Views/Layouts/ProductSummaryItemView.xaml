<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="JualIn.App.Mobile.Presentation.Modules.Catalogs.Views.Layouts.ProductSummaryItemView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:JualIn.App.Mobile.Presentation.UI.Controls.Converters"
    xmlns:horus="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
    xmlns:icons="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:pages="clr-namespace:JualIn.App.Mobile.Presentation.Modules.Catalogs.Views"
    xmlns:strings="clr-namespace:JualIn.App.Mobile.Presentation.Resources.Strings"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:JualIn.App.Mobile.Presentation.Modules.Catalogs.ViewModels"
    x:DataType="{x:Type vm:ProductViewModel}">
    <horus:MaterialCard
        Padding="{StaticResource CommonSpaceSmallAll}"
        BorderColor="{AppThemeBinding Light={StaticResource PrimaryContainer},
                                      Dark={StaticResource DarkPrimaryContainer}}"
        Command="{Binding Path=ViewModel.OpenProductDetailCommand, Source={RelativeSource AncestorType={x:Type pages:ProductManagementPage}}, x:DataType={x:Type pages:ProductManagementPage}}"
        CommandParameter="{Binding .}"
        CornerRadius="{StaticResource MaterialCornerRadiusMedium}"
        Type="Outlined">
        <Grid
            ColumnDefinitions="auto,*,auto"
            ColumnSpacing="{StaticResource CommonSpaceBetweenSmall}"
            RowDefinitions="auto,auto,auto,auto"
            VerticalOptions="Start">
            <Border
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="0"
                BackgroundColor="{StaticResource SurfaceContainer}"
                HeightRequest="{StaticResource ProductSummaryImageSize}"
                StrokeShape="{RoundRectangle CornerRadius={StaticResource MaterialCornerRadiusMedium}}"
                StrokeThickness="0"
                WidthRequest="{StaticResource ProductSummaryImageSize}">
                <Image Aspect="AspectFill" Source="{Binding Entity.Image, Converter={toolkit:ByteArrayToImageSourceConverter}}" />
            </Border>

            <horus:MaterialLabel
                Grid.Row="0"
                Grid.Column="1"
                FontAttributes="Bold"
                HorizontalOptions="Fill"
                Text="{Binding Entity.Name}"
                Type="TitleSmall" />
            <horus:MaterialIconButton
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                HorizontalOptions="End"
                ImageSource="{FontImageSource FontFamily=MaterialRounded,
                                              Glyph={Static icons:MaterialRounded.Chevron_right}}"
                VerticalOptions="Start" />
            <horus:MaterialLabel
                Grid.Row="1"
                Grid.Column="1"
                HorizontalOptions="Fill"
                Type="LabelSmall"
                VerticalOptions="End">
                <horus:MaterialLabel.FormattedText>
                    <FormattedString>
                        <Span Text="{Static strings:AppStrings.ProductSummary_Lbl_Category}" />
                        <Span Text="{Binding Entity.Category, StringFormat='{}: {0}'}" />
                    </FormattedString>
                </horus:MaterialLabel.FormattedText>
            </horus:MaterialLabel>
            <horus:MaterialLabel
                Grid.Row="2"
                Grid.Column="1"
                HorizontalOptions="Fill"
                Type="LabelSmall"
                VerticalOptions="End">
                <horus:MaterialLabel.FormattedText>
                    <FormattedString>
                        <Span Text="{Static strings:AppStrings.ProductSummary_Lbl_Stock}" />
                        <Span Text="{Binding Entity.Stock.Value, StringFormat='{}: {0}'}" />
                    </FormattedString>
                </horus:MaterialLabel.FormattedText>
            </horus:MaterialLabel>
            <Grid
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                ColumnDefinitions="*,*"
                ColumnSpacing="{StaticResource CommonSpaceBetweenSmall}">
                <horus:MaterialLabel Grid.Column="0" Type="LabelSmall">
                    <horus:MaterialLabel.FormattedText>
                        <FormattedString>
                            <Span Text="{Static strings:AppStrings.ProductSummary_Lbl_Price}" />
                            <Span Text="{Binding Entity.Price, StringFormat='{}: {0}'}" />
                        </FormattedString>
                    </horus:MaterialLabel.FormattedText>
                </horus:MaterialLabel>
                <horus:MaterialLabel Grid.Column="1" Type="LabelSmall">
                    <horus:MaterialLabel.FormattedText>
                        <FormattedString>
                            <Span Text="{Static strings:AppStrings.ProductSummary_Lbl_Margin}" />
                            <Span Text="{Binding Entity.Margin, StringFormat='{}: {0}'}" />
                        </FormattedString>
                    </horus:MaterialLabel.FormattedText>
                </horus:MaterialLabel>
            </Grid>
        </Grid>
    </horus:MaterialCard>
</ContentView>

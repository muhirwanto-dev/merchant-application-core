<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="JualIn.App.Mobile.Presentation.Modules.Sales.Views.Layouts.OrderItemView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:horus="clr-namespace:HorusStudio.Maui.MaterialDesignControls;assembly=HorusStudio.Maui.MaterialDesignControls"
    xmlns:icons="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:strings="clr-namespace:JualIn.App.Mobile.Presentation.Resources.Strings"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:JualIn.App.Mobile.Presentation.Modules.Sales.ViewModels"
    x:DataType="{x:Type vm:SaleProductViewModel}">
    <horus:MaterialCard
        Padding="{StaticResource CommonSpaceSmallAll}"
        BorderColor="{AppThemeBinding Light={StaticResource PrimaryContainer},
                                      Dark={StaticResource DarkPrimaryContainer}}"
        CornerRadius="{StaticResource MaterialCornerRadiusMedium}"
        Type="Outlined">
        <Grid
            ColumnDefinitions="auto,*,auto,auto,auto"
            ColumnSpacing="{StaticResource CommonSpaceBetweenSmall}"
            RowDefinitions="auto,auto,auto"
            RowSpacing="{StaticResource CommonSpaceBetweenMicro}">
            <Border
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                BackgroundColor="{StaticResource SurfaceContainer}"
                HeightRequest="{StaticResource OrderItemImageSize}"
                HorizontalOptions="Start"
                StrokeShape="{RoundRectangle CornerRadius={StaticResource MaterialCornerRadiusMedium}}"
                StrokeThickness="0"
                VerticalOptions="Start"
                WidthRequest="{StaticResource OrderItemImageSize}">
                <Image Aspect="AspectFill" Source="{Binding Entity.Image, Converter={toolkit:ByteArrayToImageSourceConverter}}" />
            </Border>

            <horus:MaterialLabel
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                LineBreakMode="CharacterWrap"
                Text="{Binding Entity.Name}"
                Type="TitleMedium" />

            <horus:MaterialIconButton
                Grid.Row="0"
                Grid.Column="4"
                Command="{Binding DeleteItemCommand, Source={RelativeSource AncestorType={x:Type vm:CheckoutViewModel}}, x:DataType={x:Type vm:CheckoutViewModel}}"
                CommandParameter="{Binding .}"
                HorizontalOptions="End"
                ImageSource="{FontImageSource FontFamily=MaterialRounded,
                                              Glyph={x:Static icons:MaterialRounded.Close}}" />

            <horus:MaterialLabel
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Entity.Price, StringFormat='{0:C0}'}" />

            <Border
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                StrokeShape="{RoundRectangle CornerRadius={StaticResource MaterialCornerRadiusSmall}}"
                StrokeThickness="0">
                <Grid
                    BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryContainer},
                                                      Dark={StaticResource DarkPrimaryContainer}}"
                    ColumnDefinitions="auto,*,auto"
                    ColumnSpacing="{StaticResource CommonSpaceBetweenSmall}">
                    <horus:MaterialIconButton
                        Grid.Column="0"
                        Command="{Binding DecrementItemCommand, Source={RelativeSource AncestorType={x:Type vm:CheckoutViewModel}}, x:DataType={x:Type vm:CheckoutViewModel}}"
                        CommandParameter="{Binding .}"
                        CornerRadius="{StaticResource CornerRadiusMediumInt}"
                        ImageSource="{FontImageSource FontFamily=MaterialRounded,
                                                      Glyph={Static icons:MaterialRounded.Remove}}"
                        VerticalOptions="Center" />
                    <horus:MaterialLabel
                        Grid.Column="1"
                        HorizontalTextAlignment="Center"
                        Text="{Binding OnCartQuantity, FallbackValue=0}"
                        VerticalOptions="Center" />
                    <horus:MaterialIconButton
                        Grid.Column="2"
                        Command="{Binding IncrementItemCommand, Source={RelativeSource AncestorType={x:Type vm:CheckoutViewModel}}, x:DataType={x:Type vm:CheckoutViewModel}}"
                        CommandParameter="{Binding .}"
                        CornerRadius="{StaticResource CornerRadiusMediumInt}"
                        ImageSource="{FontImageSource FontFamily=MaterialRounded,
                                                      Glyph={Static icons:MaterialRounded.Add}}"
                        VerticalOptions="Center" />
                </Grid>
            </Border>

            <horus:MaterialLabel
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Entity.Stock, StringFormat='Available: {0}'}"
                Type="LabelSmall" />
        </Grid>
    </horus:MaterialCard>
</ContentView>

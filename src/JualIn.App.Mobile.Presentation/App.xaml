<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="JualIn.App.Mobile.Presentation.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="appColors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="appDimens" Source="Resources/Styles/Dimens.xaml" />
                <ResourceDictionary x:Name="appStyles" Source="Resources/Styles/Styles.xaml" />

                <uranium:StyleResource BasedOn="{x:Reference appStyles}" ColorsOverride="{x:Reference appColors}">
                    <uranium:StyleResource.Overrides>
                        <ResourceDictionary>
                            <Style x:Key="UraniumUI.Styles.InputField" TargetType="uranium:InputField">
                                <Setter Property="MinimumHeightRequest" Value="{StaticResource MinTouchTargetSize}" />
                            </Style>
                            <Style x:Key="UraniumUI.Styles.Button" TargetType="Button">
                                <Setter Property="HeightRequest" Value="{StaticResource MinTouchTargetSize}" />
                            </Style>
                        </ResourceDictionary>
                    </uranium:StyleResource.Overrides>
                </uranium:StyleResource>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
